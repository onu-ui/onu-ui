        "@onu-ui/components": "workspace:*",
        "@onu-ui/preset": "workspace:*",
        "@onu-ui/utils": "workspace:*",
        "@types/node": "^18.7.13",
        "@unocss/preset-mini": "^0.45.12",
        "@unocss/preset-uno": "^0.45.12",
        "@vitejs/plugin-vue": "^3.0.1",
        "@vitest/ui": "0.22.1",
        "@vue/test-utils": "^2.0.0",
        "@vueuse/core": "^9.1.1",
        "bumpp": "^8.2.1",
        "eslint": "8.22.0",
        "eslint-plugin-import": "^2.26.0",
        "esno": "^0.16.3",
