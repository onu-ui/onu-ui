{
  "name": "@onu-ui/monorepo",
  "version": "1.0.14-beta.2",
  "private": true,
  "packageManager": "pnpm@7.32.4",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "nr volar:helper && nr stub",
    "docs": "npm -C docs run dev",
    "docs:build": "npm -C docs run build",
    "stub": "pnpm -r --parallel --filter=./packages/* run stub",
    "build": "rimraf packages/*/{dist,es,lib} && nr -r -F \"./packages/{preset,utils,components}\" build && nr volar:helper",
    "play": "run-s build play:run",
    "play:run": "run-p dev play:dev",
    "play:dev": "npm -C playground run dev",
    "play:build": "npm -C playground run build",
    "example": "npm -C example run dev",
    "lint": "eslint .",
    "lint:fix": "nr lint --fix",
    "release": "bumpp package.json packages/**/package.json",
    "deploy": "nr build && nr play:build && nr docs:build",
    "test": "vitest",
    "test:update": "vitest -u",
    "test:coverage": "vitest --coverage",
    "volar:helper": "esno scripts/volar-helper",
    "clean": "rimraf packages/*/{dist,es,lib}",
    "postinstall": "npx simple-git-hooks",
    "major": "taze minor -wIr"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.0",
    "@antfu/ni": "^0.21.3",
    "@iconify-json/carbon": "^1.1.16",
    "@iconify-json/fluent-emoji": "^1.1.13",
    "@iconify-json/logos": "^1.1.31",
    "@onu-ui/cli": "workspace:*",
    "@onu-ui/components": "workspace:*",
    "@onu-ui/docs": "workspace:*",
    "@onu-ui/preset": "workspace:*",
    "@onu-ui/utils": "workspace:*",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.2.1",
    "@unocss/preset-mini": "^0.51.13",
    "@unocss/preset-uno": "^0.51.13",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vitest/coverage-c8": "^0.31.1",
    "@vitest/ui": "^0.31.1",
    "@vue/test-utils": "^2.3.2",
    "@vueuse/core": "^10.1.2",
    "bumpp": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "eslint-plugin-import": "^2.27.5",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "jsdom": "^22.0.0",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "onu-ui": "workspace:*",
    "rimraf": "^5.0.1",
    "sass": "^1.62.1",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.10.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "unbuild": "^1.2.1",
    "unocss": "^0.46.4",
    "unplugin-auto-import": "^0.16.0",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.3.8",
    "vite-plugin-dts": "^2.3.0",
    "vite-plugin-inspect": "^0.7.26",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vitepress": "1.0.0-alpha.76",
    "vitest": "^0.31.1",
    "vue": "^3.3.4",
    "vue-tsc": "^1.6.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "pnpm lint:fix"
    ]
  }
}
