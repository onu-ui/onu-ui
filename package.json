{
  "name": "@onu-ui/monorepo",
  "version": "1.0.14-beta.2",
  "private": true,
  "packageManager": "pnpm@8.9.0",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "nr volar:helper && nr stub",
    "docs": "npm -C docs run dev",
    "docs:build": "npm -C docs run build",
    "stub": "pnpm -r --parallel --filter=./packages/* run stub",
    "build": "rimraf packages/*/{dist,es,lib} && nr -r -F \"./packages/{preset,utils,components}\" build && nr volar:helper",
    "play": "run-s build play:run",
    "play:run": "run-p dev play:dev",
    "play:dev": "npm -C playground run dev",
    "play:build": "npm -C playground run build",
    "example": "npm -C examples/vite-onu-preset-only run dev",
    "lint": "eslint .",
    "lint:fix": "nr lint --fix",
    "release": "bumpp package.json packages/**/package.json",
    "deploy": "nr build && nr play:build && nr docs:build",
    "test": "vitest",
    "test:update": "vitest -u",
    "test:coverage": "vitest --coverage",
    "volar:helper": "esno scripts/volar-helper",
    "clean": "rimraf packages/*/{dist,es,lib}",
    "postinstall": "npx simple-git-hooks",
    "major": "taze minor -wIr"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.2",
    "@antfu/ni": "^0.21.12",
    "@iconify-json/carbon": "^1.1.27",
    "@iconify-json/fluent-emoji": "^1.1.18",
    "@iconify-json/logos": "^1.1.42",
    "@onu-ui/components": "workspace:*",
    "@onu-ui/preset": "workspace:*",
    "@onu-ui/utils": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.3",
    "@unocss/preset-mini": "^0.58.3",
    "@unocss/preset-uno": "^0.58.3",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/ui": "^1.2.0",
    "@vue/test-utils": "^2.4.3",
    "@vueuse/core": "^10.7.2",
    "bumpp": "^9.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "esno": "^4.0.0",
    "fs-extra": "^11.2.0",
    "jsdom": "^23.2.0",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "onu-ui": "workspace:*",
    "rimraf": "^5.0.1",
    "sass": "^1.69.7",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.13.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "unocss": "^0.58.3",
    "unplugin-auto-import": "^0.17.3",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.0.11",
    "vite-plugin-dts": "^3.7.1",
    "vite-plugin-inspect": "^0.8.1",
    "vitepress": "1.0.0-rc.37",
    "vitest": "^1.2.0",
    "vue": "^3.4.14",
    "vue-tsc": "^1.8.27"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
