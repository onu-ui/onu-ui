{
  "name": "@onu-ui/monorepo",
  "type": "module",
  "version": "1.0.14-beta.2",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm stub",
    "docs": "pnpm -C docs run dev",
    "docs:build": "pnpm -C docs run build",
    "docs:preview": "pnpm docs:build && pnpm -C docs run preview",
    "stub": "pnpm -r --parallel --filter=./packages/* run stub",
    "build": "pnpm clean && pnpm -r --filter=./packages/preset run build",
    "play": "pnpm -C playground run dev",
    "play:build": "pnpm -C playground run build",
    "example": "pnpm -C examples/vite-onu-preset-only run dev",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm lint --fix",
    "release": "bumpp -r",
    "deploy": "pnpm build && pnpm docs:build",
    "test": "vitest",
    "test:update": "vitest -u",
    "test:coverage": "vitest --coverage",
    "volar:helper": "esno scripts/volar-helper",
    "clean": "rimraf packages/*/dist --glob",
    "postinstall": "npx simple-git-hooks",
    "major": "taze minor -wIr",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.24.1",
    "@iconify-json/carbon": "^1.1.36",
    "@iconify-json/fluent-emoji": "^1.1.18",
    "@iconify-json/logos": "^1.1.43",
    "@iconify-json/ri": "^1.1.21",
    "@onu-ui/preset": "workspace:*",
    "@shikijs/vitepress-twoslash": "^1.12.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.1.0",
    "@unocss/preset-mini": "^0.61.9",
    "@unocss/preset-uno": "^0.61.9",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/ui": "^2.0.5",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^10.11.0",
    "bumpp": "^9.4.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.8.0",
    "esno": "^4.7.0",
    "fs-extra": "^11.2.0",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.16.3",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "unbuild": "^2.0.0",
    "unocss": "^0.61.9",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-vue-components": "^0.27.3",
    "vite": "^5.3.5",
    "vite-plugin-dts": "4.0.0-beta.2",
    "vite-plugin-inspect": "^0.8.5",
    "vitepress": "1.3.1",
    "vitest": "^2.0.5",
    "vue": "^3.4.35",
    "vue-tsc": "^2.0.29"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": []
  }
}
