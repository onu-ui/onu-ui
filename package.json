{
  "name": "@onu-ui/monorepo",
  "type": "module",
  "version": "1.1.2",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm dev-preset",
    "build": "pnpm clean && pnpm -r --filter=./packages/* run build",
    "dev-vue": "pnpm example-vue & pnpm -C packages/vue run dev",
    "dev-preset": "pnpm example & pnpm -C packages/preset run dev",
    "docs": "pnpm -C docs run dev",
    "docs:build": "pnpm -C docs run build",
    "docs:preview": "pnpm docs:build && pnpm -C docs run preview",
    "play": "pnpm -C playground run dev",
    "play:build": "pnpm -C playground run build",
    "example": "pnpm -C examples/vite-onu-preset-only run dev",
    "example-vue": "pnpm -C examples/vite-onu-vue run dev",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm lint --fix",
    "release": "bumpp -r",
    "deploy": "pnpm build && pnpm docs:build",
    "test": "vitest",
    "test:update": "vitest -u",
    "test:coverage": "vitest --coverage",
    "volar:helper": "esno scripts/volar-helper",
    "clean": "rimraf packages/*/dist --glob",
    "postinstall": "npx simple-git-hooks",
    "taze": "taze major -wIr",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@iconify-json/carbon": "catalog:",
    "@iconify-json/fluent-emoji": "catalog:",
    "@iconify-json/logos": "catalog:",
    "@iconify-json/ri": "catalog:",
    "@onu-ui/preset": "workspace:*",
    "@shikijs/vitepress-twoslash": "catalog:",
    "@types/fs-extra": "catalog:",
    "@types/node": "catalog:",
    "@unocss/preset-mini": "catalog:",
    "@unocss/preset-uno": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "@vitejs/plugin-vue-jsx": "catalog:",
    "@vitest/coverage-c8": "catalog:",
    "@vitest/ui": "catalog:",
    "@vue/test-utils": "catalog:",
    "@vueuse/core": "catalog:",
    "bumpp": "catalog:",
    "cross-env": "catalog:",
    "eslint": "catalog:",
    "esno": "catalog:",
    "fs-extra": "catalog:",
    "jsdom": "catalog:",
    "lint-staged": "catalog:",
    "npm-run-all": "catalog:",
    "onu-ui": "workspace:*",
    "prettier": "catalog:",
    "rimraf": "catalog:",
    "simple-git-hooks": "catalog:",
    "taze": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "unocss": "catalog:",
    "unplugin-auto-import": "catalog:",
    "unplugin-vue-components": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vite-plugin-inspect": "catalog:",
    "vitepress": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-tsc": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
