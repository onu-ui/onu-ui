        "play": "pnpm -C playground run dev",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "release": "bumpp package.json packages/**/package.json",
        "deploy": "pnpm -C playground run build",
        "test": "vitest",
        "test:update": "vitest -u"
    },
    "devDependencies": {
        "@chris-zhu/eslint-config": "^1.0.5",
        "@iconify-json/carbon": "^1.1.5",
