{
  "compilerOptions": {
    "target": "es2018",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "onu-ui": ["./packages/vue/src/index.ts"],
      "@onu-ui/preset": ["./packages/preset/src/index.ts"],
      "@onu-ui/preset/helper": ["./packages/preset/src/helper.ts"],
      "@onu-ui/utils": ["./packages/utils/src/index.ts"],
      "@/*": ["./packages/vue/src/*"]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client"
    ],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/test/dts/**",
    "**/playground/**"
  ]
}
