{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "onu-ui": ["./packages/onu-ui/src/index.ts"],
      "@onu-ui/preset": ["./packages/preset/src/index.ts"],
      "@onu-ui/preset/helper": ["./packages/preset/src/helper.ts"]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client"
    ],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/test/dts/**",
    "**/playground/**",
    "**/example/**",
    "**/packages/components/**",
    "**/packages/onu-ui/**",
    "**/packages/utils/**"
  ]
}
